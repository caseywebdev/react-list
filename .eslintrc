{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "rules": {

    "eqeqeq": [2, "smart"],
    "linebreak-style": [2, "unix"],
    "prefer-arrow-callback": 2,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "strict": [2, "never"],
    "yoda": [2, "never"],

    "no-alert": 2,
    "no-console": 2,
    "no-cond-assign": 0,
    "no-const-assign": 2,
    "no-else-return": 2,
    "no-this-before-super": 2,
    "no-unexpected-multiline": 2,
    "no-var": 2,
    "no-warning-comments": 1
  }
}
